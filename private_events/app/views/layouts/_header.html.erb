<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">    
  <%= link_to "PRIVATE EVENTS", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">      
        <% if logged_in? %>      
          <% if current_user_invitations.any?%>
            <li><%= link_to "Invitations(#{current_user_invitations.count})", invitations_path %> </li>
          <%else%>  
            <li><%= link_to "Invitations", invitations_path%> </li>
          <%end%>

          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Account <b class="caret"></b>
            </a>
            <ul class="dropdown-menu"> 
              <li><%= link_to current_user.username, current_user%></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>          
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
      <ul class="nav navbar-nav navbar-left">
        <li><%= link_to "#{logged_in? ? "Dashboard" : "Welcome Page"}", root_url %> </li>  
        <li><%= link_to "Events", events_path%> </li>
      </ul>

    </nav>
  </div>
