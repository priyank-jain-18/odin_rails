<%= form_for(@event) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

	<%= f.text_field :title, placeholder: "Title", class: 'form-control'%>

	<div class="field">
		<%= f.text_area :description, placeholder: "This event is about.....",
		class: 'form-control' %>
	</div>

	<%= f.label :event_start_date, "Event start" %>
	<%= f.date_field :event_start_date,
	 	min: Time.zone.today,
	 	max: 1.year.from_now%>

	<%= f.submit "Create Event", class: "btn btn-primary" %>
<%end%>
