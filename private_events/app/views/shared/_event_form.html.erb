<%= form_for(@event) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

	<%= f.text_field :title, placeholder: "Title", class: 'form-control'%>

	<div class="field">
		<%= f.text_area :description, placeholder: "This event is about.....",
		class: 'form-control' %>
	</div>

	<%= f.submit "Create Event", class: "btn btn-primary" %>
<%end%>
