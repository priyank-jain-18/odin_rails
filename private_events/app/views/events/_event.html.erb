<li>
	<span class="user">
	<h3><%= link_to event.title, event %></h3>
	<span class="content"><p><%= event.description %></p></span>
	<span class="timestamp">		
		<h6>created <%= time_ago_in_words(event.created_at) %> ago by <%= link_to event.creator.username,
		 event.creator %> 
		 <%if !event_ended?(event) %>
		 	(starts in <%= time_ago_in_words(event.event_start_date)%>)
		 <% else %>
		 	(event has ended)
		 <%end%>
		 </h6>
	</span>
</li>