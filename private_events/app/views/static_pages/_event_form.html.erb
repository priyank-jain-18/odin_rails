<%= form_for(@event) do |f| %>
	<%= render 'shared/error_messages', object: f.object %>

	<%= f.label :title%>
	<%= f.text_field :title, class: 'form-control'%>

	<div class="field">
		<%= f.text_area :description, placeholder: "This event is about....." %>
	</div>

	<%= f.submit "Create Event", class: "btn btn-primary" %>
<%end%>
