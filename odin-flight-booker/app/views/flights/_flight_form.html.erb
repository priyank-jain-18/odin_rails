<%= form_tag("/flights", method: "get") do %>
  
  <%= label_tag("Departed from") %>  
  <%= select_tag(("flights[departed_from]"),options_for_select(@flights_from_list), class: "form-control", 
  	prompt: "select airport")%>

  <%= label_tag("Arriving to") %>  
  <%= select_tag(("flights[arriving_to]"),options_for_select(@flights_to_list), class: "form-control",
  	prompt: "select airport")%>

  <%= label_tag("Departure date") %>
  <%= select_tag(("flights[departure_date]"),options_for_select(@departure_dates_to_list),
    class: "form-control", prompt: "")%>

  <%= label_tag("Number of passengers") %>
  <%= select_tag(("flights[number_of_passengers]"),options_for_select(@number_of_passengers),class: "form-control") %>

  <%= submit_tag("search", class: "btn btn-primary") %>
<% end %>